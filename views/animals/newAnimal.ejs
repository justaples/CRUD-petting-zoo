<%- include('../partials/header.ejs')  %> 
<body>
    <div class="container" style="max-width: 50%;">
            <div class="row" style=" border:5px solid black; border-radius: 10%;margin:30px 0px 0px 0px; padding: 5px">
                <h1 class="mt-3"style="border-bottom: 2px solid black;" >Add new animal</h1>
                <form action="/animals" method="POST" enctype="multipart/form-data">
                    <p style="font-size: 25px">
                    Name: 
                    </p>
                    <input name="name" class="form-control form-control-lg" type="text" aria-label=".form-control-lg example"><br>
                    <p style="font-size: 25px">
                    Age: 
                    </p> 
                    <input name="age" class="form-control form-control-lg" type="text" aria-label=".form-control-lg example"><br>
                    <p style="font-size: 25px">
                    Description: 
                    </p> 
                    <input name="description" class="form-control form-control-lg" type="text" aria-label=".form-control-lg example"><br>
                    <!-- Name: <br><input name="name" type="text"><br><br>
                        Age: <br><input name="age" type="text"><br><br> -->
                        <div class="mb-3">
                            <label for="formFileLg" class="form-label" style="font-size: 25px;">Upload a picture:</label>
                            <input class="form-control form-control-lg" name="img" type="file" id="formFileLg" >
                        </div>
                        <!-- Upload a picture:<br><input name="img" type="file"><br><br> -->
                        <input class="btn btn-dark btn-lg" type="submit" value="Add animal">
                        <%= typeof msg != 'undefined' ? msg : '' %> <br><br> 
                    </form>
            </div>
    </div>
        

        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-kjU+l4N0Yf4ZOJErLsIcvOU2qSb74wXpOhqTvwVx3OElZRweTnQ6d31fXEoRD1Jy" crossorigin="anonymous"></script>
    </body>
